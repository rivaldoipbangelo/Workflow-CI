name: ML_Training_Project

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      data_path: {type: string, default: "dataset/data.csv"}
      model_name: {type: string, default: "model"}
      test_size: {type: float, default: 0.2}
      random_state: {type: int, default: 42}
    command: "python modelling.py --data_path {data_path} --model_name {model_name} --test_size {test_size} --random_state {random_state}"
